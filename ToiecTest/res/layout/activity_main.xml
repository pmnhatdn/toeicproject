<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/toeic"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.01" >

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.00"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnToiecPhoto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="TOIEC Photographs" />

        <Button
            android:id="@+id/btnToiecListenning"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="TOIEC Listenning" />

        <Button
            android:id="@+id/btnToiecReading"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="TOIEC Reading" />

        <Button
            android:id="@+id/btnDic"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Dictionary" />

        <Button
            android:id="@+id/btnSetting"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Setting" />
    </LinearLayout>

</LinearLayout>